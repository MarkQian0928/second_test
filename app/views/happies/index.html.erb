<p id="notice"><%= notice %></p>

<h1>Listing Happies</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @happies.each do |happy| %>
      <tr>
        <td><%= happy.content %></td>
        <td><%= happy.user_id %></td>
        <td><%= link_to 'Show', happy %></td>
        <td><%= link_to 'Edit', edit_happy_path(happy) %></td>
        <td><%= link_to 'Destroy', happy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Happy', new_happy_path %>
